{
    "manifest_version": 3,
    "name": "Secure Proxy Extension",
    "description": "A secure proxy extension with region selection and state persistence.",
    "version": "1.2",
    "permissions": [
      "proxy",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo.svg",
        "48": "logo.svg",
        "128": "logo.svg"
      }
    },
    "icons": {
      "16": "logo.svg",
      "48": "logo.svg",
      "128": "logo.svg"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }